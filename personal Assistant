def simple_personal_assistant():
    print("Welcome to the Simple Personal Assistant!")
    print("Please answer a few questions so I can get to know you better.\n")
    
    # Collect user information
    name = input("What is your name? ")
    age = input("How old are you? ")
    color = input("What is your favorite color? ")
    food = input("What is your favorite food? ")
    city = input("Which city do you live in? ")
    shs = input("Which Senior High School did you attend? ")
    team = input("What is your favorite soccer team? ")
    
    # Generate and display the summary
    print("\nHere's your personalized summary:\n")
    print(f"Hello, {name}!")
    print(f"You are {age} years old, love the color {color.lower()}, and enjoy eating {food.lower()}.")
    print(f"You attended {shs} and support {team} - great choice!")
    print(f"Life must be awesome in {city}!")
    print("\nThanks for using the Simple Personal Assistant!")

# Run the program
if __name__ == "__main__":
    simple_personal_assistant()